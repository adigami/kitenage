<%- model_class = AdAccount -%>
<div class="page-header">
  <h1><%=t '.title', :default => AdAccount %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @ad_account.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_id) %></dt>
      <dd><pre class="prettyprint"><%= @ad_account.source_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:oauth_token) %></dt>
      <dd><pre class="prettyprint"><%= @ad_account.oauth_token %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:active) %></dt>
      <dd><pre class="prettyprint"><%= @ad_account.active %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ad_accounts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ad_account_path(@ad_account), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ad_account_path(@ad_account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

